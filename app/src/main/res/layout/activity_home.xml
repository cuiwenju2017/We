<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bxll="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical">

        <com.cwj.we.view.TabView
            android:id="@+id/tab_us"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            bxll:tabColor="@color/colorAccent"
            bxll:tabImage="@drawable/us_list_normal"
            bxll:tabSelectedImage="@drawable/us_list_pressed"
            bxll:tabTitle="我们" />

        <com.cwj.we.view.TabView
            android:id="@+id/tab_games"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            bxll:tabColor="@color/colorAccent"
            bxll:tabImage="@drawable/mini_games_list_normal"
            bxll:tabSelectedImage="@drawable/mini_games_list_pressed"
            bxll:tabTitle="小游戏" />

        <com.cwj.we.view.TabView
            android:id="@+id/tab_tool"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            bxll:tabColor="@color/colorAccent"
            bxll:tabImage="@drawable/tool_list_normal"
            bxll:tabSelectedImage="@drawable/tool_list_pressed"
            bxll:tabTitle="工具" />

        <com.cwj.we.view.TabView
            android:id="@+id/tab_yingshi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            bxll:tabColor="@color/colorAccent"
            bxll:tabImage="@drawable/yingshi_list_normal"
            bxll:tabSelectedImage="@drawable/yingshi_list_pressed"
            bxll:tabTitle="影视" />
    </LinearLayout>
</RelativeLayout>